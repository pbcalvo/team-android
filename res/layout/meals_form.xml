<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp" >

        <RadioGroup
            android:id="@+id/meal_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Breakfast" />

            <RadioButton
                android:id="@+id/snack_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack AM" />

            <RadioButton
                android:id="@+id/lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch" />
            
            <RadioButton
                android:id="@+id/snack_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack PM" />
            
            <RadioButton
                android:id="@+id/dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner" />
        </RadioGroup>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much?"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp">

        <RadioGroup
            android:id="@+id/howmuch_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/tasted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Just tasted it" />

            <RadioButton
                android:id="@+id/something"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Something" />

            <RadioButton
                android:id="@+id/half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Half" />
            
            <RadioButton
                android:id="@+id/almost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almost everything" />
            
            <RadioButton
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All" />
        </RadioGroup>
    
    </TableLayout>
    
    </LinearLayout>
    
    </ScrollView>

</LinearLayout>